%table{:bgcolor => "#172027", :width => "670", :align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
	%tr{:height => "20", :bgcolor => "#3498db"}
		%td
	%tr{:height => "100", :valign => "middle"}
		%td{:align => "center"}
			= image_tag "http://audreyboucher.fr/img/logo_gaflix.png", :alt => "GaFlix", :height => "50"
%table{:bgcolor => "#222e39", :width => "670", :align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
	%tr{:height => "40"}
		%td{:colspan => "3"}
	%tr
		%td{:width => "50"}
		%td{:width => "570", :align => "center"}
			%font{:font => "Tahoma, Arial, Helvetica, sans-serif", :size => "3", :color => "#ffffff"}
				= t('emailings.reset_password.p1', :username => @resource.username)
		%td{:width => "50"}
	%tr{:height => "10"}
		%td{:colspan => "3"}
	%tr
		%td{:width => "50"}
		%td{:width => "570", :align => "center"}
			%font{:font => "Tahoma, Arial, Helvetica, sans-serif", :size => "2", :color => "#ffffff"}
				= t('emailings.reset_password.p2')
		%td{:width => "50"}
	%tr{:height => "70"}
		%td{:colspan => "3"}
%table{:bgcolor => "#ecf0f1", :width => "670", :align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
	%tr{:height => "5", :bgcolor => "#bdc3c7"}
		%td{:colspan => "3"}
	%tr{:height => "30"}
		%td{:colspan => "3"}
	%tr{:height => "40", :valign => "middle"}
		%td{:width => "185"}
		%td{:width => "300", :bgcolor => "#3498db", :align => "center"}
			= link_to edit_password_url(@resource, reset_password_token: @token), :color => "#ffffff", :style => "color:#ffffff; text-decoration:none; text-transform:uppercase;" do
				%font{:font => "Tahoma, Arial, Helvetica, sans-serif", :size => "4", :color => "#ffffff"}
					= t('emailings.reset_password.link')
		%td{:width => "185"}
	%tr{:height => "30"}
		%td{:colspan => "3"}
	%tr{:height => "5", :bgcolor => "#bdc3c7"}
		%td{:colspan => "3"}
%table{:bgcolor => "#222e39", :width => "670", :align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
	%tr{:height => "40"}
		%td{:colspan => "3"}
	%tr
		%td{:width => "50"}
		%td{:width => "570", :align => "center"}
			%font{:font => "Tahoma, Arial, Helvetica, sans-serif", :size => "2", :color => "#ffffff"}
				= t('emailings.reset_password.p3')
		%td{:width => "50"}
	%tr
		%td{:width => "50"}
		%td{:width => "570", :align => "center"}
			%font{:font => "Tahoma, Arial, Helvetica, sans-serif", :size => "2", :color => "#ffffff"}
				= t('emailings.reset_password.p4')
		%td{:width => "50"}
	%tr{:height => "40"}
		%td{:colspan => "3"}
